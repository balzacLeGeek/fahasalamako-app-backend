{% extends 'base.html.twig' %}

{% block title %}{{ 'action.principes_actifs.title'|trans }}{% endblock %}

{% block body %}
    <section class="content">
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                {{ 'principes_actifs.list.title'|trans }}
                            </h2>
                            <ul class="header-dropdown m-r--5">
                                <a href="{{ path('principes_actifs_new') }}" type="button" class="btn btn-info waves-effect pull-right">{{ 'menu.create'|trans }}</a>
                            </ul>
                        </div>
                        <div class="body table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>{{ 'principes_actifs.fields.nom'|trans }}</th>
                                        <th>{{ 'menu.table.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for principes_actifs in principes_actifss %}
                                    <tr>
                                        <th scope="row">{{ principes_actifs.id }}</th>
                                        <th>{{ principes_actifs.nom }}</th>
                                        <th>
                                            <a href="{{ path('principes_actifs_show', {'id': principes_actifs.id}) }}"> {{ 'menu.show'|trans }} </a>
                                            <a href="{{ path('principes_actifs_edit', {'id': principes_actifs.id}) }}"> {{ 'menu.edit'|trans }} </a>
                                        </th>
                                    </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="8">{{ 'action.table.no_record'|trans }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
{% endblock %}
