{{ form_start(form) }}
    <div class="form-group">
        <div class="form-line">
            {{ form_row(form.adresse, {'attr' : {'class':'form-control'}}) }}
        </div>  
    </div>
    <div class="form-group">
        <div class="col-md-6">
            <div class="form-line">
                {{ form_row(form.nom, {'attr' : {'class':'form-control'}}) }}
            </div>            
        </div>
        <div class="col-md-6">
            <div class="form-line">
                {{ form_row(form.telephone, {'attr' : {'class':'form-control'}}) }}
            </div>            
        </div>
    </div>
        
    <div class="form-group">
        <div class="col-md-6">
            <div class="form-line">
                {{ form_row(form.latitude, {'attr' : {'class':'form-control'}}) }}
            </div>            
        </div>
        <div class="col-md-6">
            <div class="form-line">
                {{ form_row(form.longitude, {'attr' : {'class':'form-control'}}) }}
            </div>            
        </div>
    </div>
    <br>
    <a class="btn btn-info m-t-15 waves-effect" type="button" href="{{ path('pharmacie_index') }}">{{ 'menu.back_to'|trans }}</a>
    <button class="btn btn-primary m-t-15 waves-effect" type="button">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
