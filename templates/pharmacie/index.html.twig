{% extends 'base.html.twig' %}

{% block title %}Pharmacie index{% endblock %}

{% block body %}
    <h1>Pharmacie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pharmacie in pharmacies %}
            <tr>
                <td>{{ pharmacie.id }}</td>
                <td>{{ pharmacie.nom }}</td>
                <td>{{ pharmacie.adresse }}</td>
                <td>{{ pharmacie.telephone }}</td>
                <td>{{ pharmacie.latitude }}</td>
                <td>{{ pharmacie.longitude }}</td>
                <td>
                    <a href="{{ path('pharmacie_show', {'id': pharmacie.id}) }}">show</a>
                    <a href="{{ path('pharmacie_edit', {'id': pharmacie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pharmacie_new') }}">Create new</a>
{% endblock %}
