{% extends 'base.html.twig' %}

{% block title %}{{ 'action.laboratoire.title'|trans }}{% endblock %}

{% block body %}
    <section class="content">
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                {{ 'laboratoire.list.title'|trans }}
                            </h2>
                            <ul class="header-dropdown m-r--5">
                                <a href="{{ path('laboratoire_new') }}" type="button" class="btn btn-info waves-effect pull-right">{{ 'menu.create'|trans }}</a>
                            </ul>
                        </div>
                        <div class="body table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>{{ 'laboratoire.fields.nom'|trans }}</th>
                                        <th>{{ 'laboratoire.fields.adresse'|trans }}</th>
                                        <th>{{ 'laboratoire.fields.telephone'|trans }}</th>
                                        <th>{{ 'laboratoire.fields.fax'|trans }}</th>
                                        <th>{{ 'laboratoire.fields.bp'|trans }}</th>
                                        <th>{{ 'laboratoire.fields.email'|trans }}</th>
                                        <th>{{ 'laboratoire.fields.website'|trans }}</th>
                                        <th>{{ 'menu.table.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for laboratoire in laboratoires %}
                                    <tr>
                                        <th scope="row">{{ laboratoire.id }}</th>
                                        <th>{{ laboratoire.nom }}</th>
                                        <th>{{ laboratoire.adresse }}</th>
                                        <th>{{ laboratoire.telephone }}</th>
                                        <th>{{ laboratoire.fax }}</th>
                                        <th>{{ laboratoire.bp }}</th>
                                        <th>{{ laboratoire.email }}</th>
                                        <th>{{ laboratoire.website }}</th>
                                        <th>
                                            <a href="{{ path('laboratoire_show', {'id': laboratoire.id}) }}"> {{ 'menu.show'|trans }} </a>
                                            <a href="{{ path('laboratoire_edit', {'id': laboratoire.id}) }}"> {{ 'menu.edit'|trans }} </a>
                                        </th>
                                    </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="8">{{ 'action.table.no_record'|trans }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
{% endblock %}
