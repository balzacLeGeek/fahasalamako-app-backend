{{ form_start(form) }}
    <div class="form-group">
        <div class="col-md-6">
            <div class="form-line">
                {{ form_row(form.titre, {'attr' : {'class':'form-control'}}) }}
            </div>            
        </div>
        <div class="col-md-6">
            <div class="form-line">
                {{ form_row(form.imageUrl, {'attr' : {'class':'form-control'}}) }}
            </div>            
        </div>
        <div class="col-md-12">
            <div class="form-line">
                {{ form_row(form.contenu, {'attr' : {'class':'form-control'}}) }}
            </div>            
        </div>
    </div>
    {{ form_row(form.pathologie) }}
    <br>
    <a class="btn btn-info m-t-15 waves-effect" type="button" href="{{ path('astuces_index') }}">{{ 'menu.back_to'|trans }}</a>
    <button class="btn btn-primary m-t-15 waves-effect" type="submit">{{ button_label|default('Save') }}</button>
